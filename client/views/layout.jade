doctype html
html
  head
    title #{title}
    meta(charset='utf-8')
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/common.css')
    link(rel='stylesheet', href='/css/icon.css')
    link(rel='stylesheet', href='/css/Xicon.css')
    link(rel='stylesheet', href='/css/animate.css')
    link(rel='stylesheet', href='/css/tools.css')
    block css
  body
    div.top-nav.line
      div.container
        ul.top-nav-list
          li
            a.navbar-brand(href='/') DOCS
        ul.top-nav-list.pull-right
          if user
            li
              a #{user.login}
            li
              a(href='/modifypassword/#{user.login}',data-tip='修改密码')
                span.icon-key
            li
              a(href='/logout',data-tip='退出登录')
                span.icon-exit
          if !user && !login
            li
              a(href='/login') 登录
    div.container.main
      block content
      
    script(type='text/javascript', src='/lib/jquery/1.11.0/jquery.js')
    script(type='text/javascript',src='/js/common.js')
    block script